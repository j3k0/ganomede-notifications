{
  "include": ["src/**/*", "tests/**/*", "types/**/*.ts", "index.ts", "index.fix.ts", "config.ts"],
  "compilerOptions": { 
    "types": [ "mocha" ],
    "typeRoots": ["./types", "node_modules/@types"],
    "allowJs": true,
    "outDir": "build",
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "inlineSourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "removeComments": false,
    "lib": [
      "es2019"
    ],
    "target": "es2019"
  }
}

